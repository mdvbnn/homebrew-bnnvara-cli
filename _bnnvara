#compdef bnnvara
# shellcheck disable=SC2034
# https://github.com/koalaman/shellcheck/wiki/SC2034

_bnnvara() {
  __bnnvara
}

__bnnvara() {
  readonly local DEPTH=2

  case $CURRENT in
    "$DEPTH")
      _arguments \
        '*: :->subcommands'

      case ${state:?} in
        subcommands)
          _values \
            'subcommand' \
            'config[config commands]' \
            'docker[Docker Compose Commands]' \
            'project[mark project folder active to run commands]' \
            ;
          ;;
      esac
      ;;
    *)
      case ${words[$DEPTH]:?} in
        config)
          __bnnvara_config
          ;;
        docker)
          __bnnvara_docker
          ;;
        project)
          __bnnvara_project
          ;;
        *)
          # if does not match any subcommand
          # complete rest arguments
          _files
          ;;
      esac
      ;;
  esac
}


__bnnvara_config() {
  readonly local DEPTH=3

  case $CURRENT in
    "$DEPTH")
      _arguments \
        {--force,--f} \
        {--verbose,--v} \
        '*: :->subcommands'

      case ${state:?} in
        subcommands)
          _values \
            'subcommand' \
            'setup[Setup bnnvara cli config]' \
            'read[list the config]' \
            'check[Check if everything is configured]' \
            'help[Describe subcommands or one specific subcommand]' \
            ;
          ;;
      esac
      ;;
    *)
      case ${words[$DEPTH]:?} in
        setup)
          __bnnvara_config_setup
          ;;
        read)
          __bnnvara_config_read
          ;;
        check)
          __bnnvara_config_check
          ;;
        help)
          __bnnvara_config_help
          ;;
        *)
          # if does not match any subcommand
          # complete rest arguments
          _files
          ;;
      esac
      ;;
  esac
}


__bnnvara_config_setup() {
  _arguments \
    '*: :->rest'

  case ${state:?} in
    rest)
      # complete rest arguments
      _files
      ;;
  esac
}

__bnnvara_config_read() {
  _arguments \
    '*: :->rest'

  case ${state:?} in
    rest)
      # complete rest arguments
      _files
      ;;
  esac
}

__bnnvara_config_check() {
  _arguments \
    '*: :->rest'

  case ${state:?} in
    rest)
      # complete rest arguments
      _files
      ;;
  esac
}

__bnnvara_config_help() {
  _arguments \
    '*: :->rest'

  case ${state:?} in
    rest)
      # complete rest arguments
      _files
      ;;
  esac
}

